<Window x:Class="_20._09._2023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20._09._2023"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="DarkCyan">
    <Grid Margin="20">
        <DockPanel>
            <TextBox Name="Question" DockPanel.Dock="Top" Height="150" Background="WhiteSmoke" FontSize="25"/>
            <TextBox Name="Answer" DockPanel.Dock="Bottom" Height="150" Background="WhiteSmoke" IsReadOnly="True" FontSize="25"/>
            <Button Content="Ответить" Margin="10" Click="Button_Click" FontSize="25"/>
        </DockPanel>
    </Grid>
</Window>
